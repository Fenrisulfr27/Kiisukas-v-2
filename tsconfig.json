{
  "extends": ["@sapphire/ts-config"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "incremental": true,
    "module": "node16",
    "moduleResolution": "node16",
    "verbatimModuleSyntax": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },

  "include": ["src"]
}
